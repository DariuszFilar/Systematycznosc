@model Systematycznosc.ViewModels.UserProfileViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="SiteContent">
    <section class="page-section portfolio bg-primary text-white mb-0" id="portfolio">
        <div class=" d-flex align-items-center flex-column">

            <!-- Masthead Avatar Image -->
            <!-- Masthead Heading -->
            <h1 class="masthead-heading text-uppercase mb-0" style="font-size:55px; padding-top:55px;">Credo</h1>

            <!-- Icon Divider -->
            <div class="divider-custom">
                <div class="divider-custom-line" style="background-color:white!important;"></div>
                <div class="divider-custom-icon">
                    <i class="glyphicon glyphicon-star" style="font-size: 55px; color:white!important;"></i>
                </div>
                <div class="divider-custom-line" style="background-color:white!important;"></div>
            </div>

            @using (Html.BeginForm("Manage", "Profile", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal col-md-11 col-s-5 col-lg-8", role = "form", style = " text-align: center;font-size:35px; " }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, "Imię:", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", style = "float:none!important; display:inline-block; font-size:25px;" })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Nickname, "Nick:", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Nickname, new { @class = "form-control", style = "float:none!important; display:inline-block; font-size:25px;" })
                        @Html.ValidationMessageFor(m => m.Nickname, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Gender, "Płeć:", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(x => x.Gender, new SelectList(Model.GendersForDropDown), "---wybierz---", new { @class = "form-control", style = "float:left!important; display:inline-block; font-size:25px; color: black; text-align: left;" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.BirthDate, "Data:", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.BirthDate, new { @type = "date", @class = " datepicker col-md-12 form-control", @Value = Model.BirthDate.ToString("yyyy-MM-dd"), @style = "font-size:25px; color:black;" })
                        @Html.ValidationMessageFor(model => model.BirthDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <button type="submit" value="Log in" class="btn bg-info">Zapisz</button>

                @Html.ActionLink("Powród do profilu", "Index", "profile", null, new { @class = "btn bg-info", style = "color: black" })
            }
        </div>
    </section>
</div>


