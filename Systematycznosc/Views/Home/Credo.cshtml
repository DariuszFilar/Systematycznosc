@model Systematycznosc.ViewModels.CredoViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    <style>
        body {
            background-color: #1abc9c
        }
    </style>
}


<div class=" d-flex align-items-center flex-column portfolio bg-primary text-white mb-0">

    <!-- Masthead Avatar Image -->
    <!-- Masthead Heading -->
    <h1 class="masthead-heading text-uppercase mb-0" style="font-size:55px; text-align:center;" id="Opener">Credo</h1>

    <!-- Icon Divider -->
    <div class="divider-custom">
        <div class="divider-custom-line" style="background-color:white!important;"></div>
        <div class="divider-custom-icon">
            <i class="glyphicon glyphicon-star" style="font-size: 55px; color:white!important;"></i>
        </div>
        <div class="divider-custom-line" style="background-color:white!important;"></div>
    </div>
    <div class="numberlist">
        <div style="font-size:37px; text-align:center;">Najważniejszy rzeczy którymi kierujesz się każdego dnia</div>
        <ol>
            @if (Model.Credo1 != null)
            {
                <li><a href="">@Model.Credo1</a></li>
            }
            @if (Model.Credo2 != null)
            {
                <li><a href="">@Model.Credo2</a></li>
            }
            @if (Model.Credo3 != null)
            {
                <li><a href="">@Model.Credo3</a></li>
            }
            @if (Model.Credo4 != null)
            {
                <li><a href="">@Model.Credo4</a></li>
            }
            @if (Model.Credo5 != null)
            {
                <li><a href="">@Model.Credo5</a></li>
            }
            @if (Model.Credo6 != null)
            {
                <li><a href="">@Model.Credo6</a></li>
            }
            @if (Model.Credo7 != null)
            {
                <li><a href="">@Model.Credo7</a></li>
            }
            @if (Model.Credo8 != null)
            {
                <li><a href="">@Model.Credo8</a></li>
            }
            @if (Model.Credo9 != null)
            {
                <li><a href="">@Model.Credo9</a></li>
            }
            @if (Model.Credo10 != null)
            {
                <li><a href="">@Model.Credo10</a></li>
            }
        </ol>
    </div>
</div>
<div style="max-width: 150px; margin-left:auto; margin-right:auto" ">
    <a href="@Url.Action("CredoEdit", "Home")" id="HoverNone">
        <div class="glyphicon glyphicon-plus-sign" style="font-size: 150px; display:block; text-align:center; color: lightcoral; max-width: 150px; margin-left:auto; margin-right:auto"></div>
    </a>
</div>


