@model Systematycznosc.ViewModels.GoalsViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    <style>
        body {
            background-color: #1abc9c
        }
    </style>
}


<div class=" d-flex align-items-center flex-column portfolio bg-primary text-white mb-0">

    <!-- Masthead Avatar Image -->
    <!-- Masthead Heading -->
    @{ if (Model.AGoalName != null)
        { <h1 class="masthead-heading text-uppercase mb-0" style="font-size:55px;" id="Opener">@Model.AGoalName</h1>}
    else
    { <h1 class="masthead-heading text-uppercase mb-0" style="font-size:55px;" id="Opener">Twój cel nr 1</h1>}
    }

    <!-- Icon Divider -->
    <div class="divider-custom">
        <div class="divider-custom-line" style="background-color:white!important;"></div>
        <div class="divider-custom-icon">
            <i class="glyphicon glyphicon-star" style="font-size: 55px; color:white!important;"></i>
        </div>
        <div class="divider-custom-line" style="background-color:white!important;"></div>
    </div>
    @{ if (Model.AGoalQuestion != null)
        {
            <div style="font-size:37px; text-align:center; padding-bottom:50px;">@Model.AGoalQuestion</div>}
        else
        {
            <div style="font-size:37px; text-align:center; padding-bottom:50px;">Pytanie odnośnie celu</div>
        }
    }
    @using (Html.BeginForm("GoalsEdit", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal col-md-11 col-s-5 col-lg-8", role = "form", style = " text-align: center;font-size:35px; padding-top:45px; " }))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="text-align:center;">
            <div class="col-md-10" style="margin-left:auto; margin-right:auto; float:none!important;">
                @Html.LabelFor(m => m.AGoalName, "Nazwa celu:", new { @class = "control-label", style = "margin-left:auto; margin-right:auto; display:inline-block; float:none;" })
                @Html.TextBoxFor(m => m.AGoalName, new { @class = "form-control col-md-8 col-lg-7", style = "float:none!important; display:inline-block; font-size:25px; width:400px;" })
                @Html.ValidationMessageFor(m => m.AGoalName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group" style="text-align:center;">

            <div class="col-md-10" style="margin-left:auto; margin-right:auto; float:none!important;">
                @Html.LabelFor(m => m.AGoalQuestion, "Pytanie celu:", new { @class = " control-label", style = "margin-left:auto; margin-right:auto; display:inline-block; float:none;" })
                @Html.TextBoxFor(m => m.AGoalQuestion, new { @class = "form-control col-md-8 col-lg-7", style = "float:none!important; display:inline-block; font-size:25px; width:400px;" })
                @Html.ValidationMessageFor(m => m.AGoalQuestion, "", new { @class = "text-danger" })
            </div>
        </div>
        <div style="padding-bottom:50px; padding-top:20px;">
            <div style=" padding-bottom:3px; padding-left:3px; padding-right:3px; padding-top:3px; display:inline-block; margin-bottom:10px;">
                <button style="font-size:40px;" type="submit" value="Log in" class="btn btn-success">Zapisz</button>
            </div>
            <div style="padding-bottom:3px; padding-left:3px; padding-right:3px; padding-top:3px; display:inline-block; margin-bottom:10px;">
                @Html.ActionLink("Powród do celów", "AGoals", "Home", null, new { @class = "btn bg-success icon-user nav_bar_first_small_screen", style = "color:white; font-size:40px;" })
            </div>
        </div>
    }

    <!-- Masthead Avatar Image -->
    <!-- Masthead Heading -->
    @{ if (Model.BGoalName != null)
