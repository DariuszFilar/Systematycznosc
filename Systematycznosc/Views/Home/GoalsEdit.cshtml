        <div class="form-group" style="text-align:center;">

            <div class="col-md-10" style="margin-left:auto; margin-right:auto; float:none!important;">
                @Html.LabelFor(m => m.BGoalQuestion, "Pytanie celu:", new { @class = " control-label", style = "margin-left:auto; margin-right:auto; display:inline-block; float:none;" })
