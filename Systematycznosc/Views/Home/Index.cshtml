                    @Html.RadioButton("status", "Nie", new { name = "", id = "" })@Html.Label("Nie")
                </div>
                <div>
                    @Html.RadioButton("status", "Odpoczynek", new { name = "", id = "" })@Html.Label("Odpoczynek")
                    @Html.RadioButton("status", "Nagroda", new { name = "", id = "" })@Html.Label("Nagroda")
