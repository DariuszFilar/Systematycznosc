                <!-- Icon Divider -->
                <div class="divider-custom">
                    <div class="divider-custom-line"></div>
                    <div class="divider-custom-icon">
                        <i class="glyphicon glyphicon-star" style="font-size: 55px;"></i>
                    </div>
                    <div class="divider-custom-line"></div>
                </div>
                <div class="numberlist">
                    <div style="color:@colordescription; font-size:37px; text-align:center;">Rzeczy o których warto pamiętać byś był szczęśliwy</div>
                    <ol>

                        @{foreach (var relationship in Model.RelationshipViewModel.Relationships.Where(x => x.RelationshipValue != null))
                            {
                                if (relationship != null)
                                {
                                    <li>
                                        <a>
