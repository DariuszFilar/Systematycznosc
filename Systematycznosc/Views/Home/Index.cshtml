@model HomeViewModelWrapper
@using Systematycznosc.ViewModels

@{
    string icon = "";
    string color = "";
    int colornumber = 2;
    string colordescription = "";
}

<header class="masthead bg-primary text-white text-center">
    <div class=" d-flex align-items-center flex-column">

        <!-- Masthead Avatar Image -->
        @{if (Model.UserProfileViewModel.Photo != null)
            {<img src="@Model.UserProfileViewModel.Photo" class="img-circle" style="max-width:305px; padding-top:85px;">}
            else
            {
                <img src="https://startbootstrap.github.io/startbootstrap-freelancer/assets/img/avataaars.svg" class="img-circle" style="max-width:305px; padding-top:85px;">}
        }
        <!-- Masthead Heading -->
        @if (Model.UserProfileViewModel.Name != null)
        {
            <h1 class="masthead-heading text-uppercase mb-0" style="font-size:55px; padding-top:55px; line-height: 50px;">Witaj @Model.UserProfileViewModel.Name</h1>
        }

        <!-- Icon Divider -->
        <div class="divider-custom divider-light" style="padding-top:20px;">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon">
                <i class="glyphicon glyphicon-star" style="font-size: 55px;"></i>
            </div>
            <div class="divider-custom-line"></div>
        </div>

        <!-- Masthead Subheading -->
        <p class="masthead-subheading font-weight-light mb-0">W pomocniku systematyczności</p>

    </div>
    @{
        if (Model.IsInitialized == false)
        {
            <style>
                body {
                    background-color: #1abc9c
                }
            </style>
            <h1 class="masthead-heading text-uppercase mb-0" style="color: white; font-size: 55px; padding-top: 55px; line-height: 88px;">
                By spersonalizować pomocnika wejdź w zakładki u góry i dodaj interesujące Cię rzeczy
            </h1>
        }
    }

</header>

@{
    if (Model.CredoViewModel.Credos != null && Model.CredoViewModel.Credos.Any())
    {
        colornumber++;
        if ((colornumber % 2) == 0)
        {
            color = "bg-primary";
            icon = "divider-light";
            colordescription = "white";
        }
        else
        {
            color = "";
            icon = "";
            colordescription = "black";
        };


        <section class="page-section portfolio @color" id="credo">
            <div class=" d-flex align-items-center flex-column">

                <!-- Masthead Avatar Image -->
                <!-- Masthead Heading -->
                <h1 class="masthead-heading text-uppercase mb-0" style="font-size:55px; padding-top:55px;">Credoes</h1>

                <!-- Icon Divider -->
                <div class="divider-custom">
                    <div class="divider-custom-line"></div>
                    <div class="divider-custom-icon">
                        <i class="glyphicon glyphicon-star" style="font-size: 55px;"></i>
                    </div>
                    <div class="divider-custom-line"></div>
                </div>
                <div class="numberlist">
                    <div style="color:@colordescription; font-size:37px; text-align:center;">Najważniejszy rzeczy którymi kierujesz się każdego dnia</div>
                    <ol>

                        @{foreach (var credo in Model.CredoViewModel.Credos.Where(x => x.CredoValue != null))
                            {
                                if (credo != null)
                                {
                                    <li>
                                        <a>
                                            @credo.CredoValue
                                        </a>
                                    </li>
                                }
                            }
                        }
                    </ol>
                </div>
            </div>
        </section>
    }
}

@{
    if (Model.RelationshipViewModel.Relationships != null && Model.RelationshipViewModel.Relationships.Any())
