@model Systematycznosc.ViewModels.GoalsViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    <style>
        body {
            background-color: #1abc9c
        }
    </style>
}


<div class=" d-flex align-items-center flex-column portfolio bg-primary text-white mb-0">

    <!-- Masthead Avatar Image -->
    <!-- Masthead Heading -->
    <h1 class="masthead-heading text-uppercase mb-0" style="font-size:55px; text-align:center;" id="Opener">Cele dzienne</h1>


    <!-- Icon Divider -->
    <div class="divider-custom divider-light" style="">
        <div class="divider-custom-line"></div>
        <div class="divider-custom-icon">
            <i class="glyphicon glyphicon-star" style="font-size: 55px;"></i>
        </div>
        <div class="divider-custom-line"></div>
    </div>
    <div style="font-size:37px; text-align:center; padding-bottom:50px;">Warto je spełniać</div>
</div>
<div class=" d-flex align-items-center flex-column" style="background-color:white!important;">
    @{ if (Model.AGoalName != null)
        {
            <h1 class="masthead-heading text-uppercase mb-0" style="font-size:55px; padding-top:55px;text-align:center; color:black!important;">@Model.AGoalName</h1>
            <!-- Icon Divider -->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="glyphicon glyphicon-star" style="font-size: 55px;"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>
            <div style="font-size:37px; text-align:center; padding-bottom:50px;">@Model.AGoalQuestion</div>
            using (Ajax.BeginForm("Goals", "Home", new { ReturnUrl = ViewBag.ReturnUrl, UpdateTargetId = "AGoalTable" }, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "AGoalTable" }, new { @class = "form-horizontal col-md-11 col-s-5 col-lg-8", role = "form", style = " text-align: center; color:black; font-size:25px" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.RadioButtonFor(model => model.AGoal1, "Tak", new { name = "", id = "" })@Html.Label("Tak")
                @Html.RadioButtonFor(model => model.AGoal1, "Nie", new { name = "", id = "" })@Html.Label("Nie")
                @Html.RadioButtonFor(model => model.AGoal1, "Odpoczynek", new { name = "", id = "" })@Html.Label("Odpoczynek")
                @Html.RadioButtonFor(model => model.AGoal1, "Nagroda", new { name = "", id = "" })@Html.Label("Nagroda")

                <div style=" padding-bottom:3px; padding-left:3px; padding-right:3px; padding-top:3px; display:inline-block; margin-bottom:10px;">
                    <button style="font-size:40px;" type="submit" value="AGoal" class="btn btn-success" name="submitButton" id="AGoalSave">Zapisz</button>
                </div>
            }
            <div id="AGoalTable">@{Html.RenderPartial("_AGoalTable", Model);}</div>
        }
        else
        { <h1 class="masthead-heading text-uppercase mb-0" style="font-size:55px; padding-top:55px;text-align:center; color:black!important;">Twój cel nr 1</h1>
            <!-- Icon Divider -->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="glyphicon glyphicon-star" style="font-size: 55px;"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>
            <div style="font-size:37px; text-align:center; padding-bottom:50px;">Pytanie do celu pierwszego</div>}
    }
    <div style="max-width: 150px; margin-left:auto; margin-right:auto; padding-top: 50px; padding-bottom:50px;">
        <a href="@Url.Action("GoalsEdit", "Home")" id="HoverNone">
            <div class="glyphicon glyphicon-plus-sign" style="font-size: 150px; display:block; text-align:center; color: lightcoral; max-width: 150px; margin-left:auto; margin-right:auto"></div>
        </a>
    </div>
</div>
<div class=" d-flex align-items-center flex-column" style="">
    @{ if (Model.BGoalName != null)
        {
            <h1 class="masthead-heading text-uppercase mb-0" style="font-size:55px; padding-top:55px;text-align:center; color:white!important;">@Model.BGoalName</h1>
            <!-- Icon Divider -->
            <div class="divider-custom divider-light" style="">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="glyphicon glyphicon-star" style="font-size: 55px;"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>
            <div style="font-size:37px; text-align:center; padding-bottom:50px; color:white;">@Model.BGoalQuestion</div>
            using (Ajax.BeginForm("Goals", "Home", new { ReturnUrl = ViewBag.ReturnUrl, UpdateTargetId = "BGoalTable" }, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "BGoalTable" }, new { @class = "form-horizontal col-md-11 col-s-5 col-lg-8", role = "form", style = " text-align: center; color:black; font-size:25px" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.RadioButtonFor(model => model.BGoal1, "Tak", false)@Html.Label("Tak")
                @Html.RadioButtonFor(model => model.BGoal1, "Nie", false)@Html.Label("Nie")
                @Html.RadioButtonFor(model => model.BGoal1, "Odpoczynek", false)@Html.Label("Odpoczynek")
                @Html.RadioButtonFor(model => model.BGoal1, "Nagroda", false)@Html.Label("Nagroda")

                <div style=" padding-bottom:3px; padding-left:3px; padding-right:3px; padding-top:3px; display:inline-block; margin-bottom:10px;">
                    <button style="font-size:40px;" type="submit" value="BGoal" class="btn btn-success" name="submitButton" id="BGoalSave">>Zapisz</button>
                </div>
            }
            <div id="BGoalTable">@{Html.RenderPartial("_BGoalTable", Model);}</div>
        }
        else
        { <h1 class="masthead-heading text-uppercase mb-0" style="font-size:55px; padding-top:55px;text-align:center; color:white!important;">Twój cel nr 2</h1>
            <!-- Icon Divider -->
            <div class="divider-custom divider-light" style="">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="glyphicon glyphicon-star" style="font-size: 55px;"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>
            <div style="font-size:37px; text-align:center; padding-bottom:50px; color:white;">Pytanie do celu drugiego</div>}
    }
    <div style="max-width: 150px; margin-left:auto; margin-right:auto; padding-top: 50px; padding-bottom:50px;">
        <a href="@Url.Action("GoalsEdit", "Home")" id="HoverNone">
            <div class="glyphicon glyphicon-plus-sign" style="font-size: 150px; display:block; text-align:center; color: lightcoral; max-width: 150px; margin-left:auto; margin-right:auto"></div>
        </a>
    </div>
</div>

