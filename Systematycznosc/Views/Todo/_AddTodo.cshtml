@model Systematycznosc.ViewModels.TodoViewModel

<div class="numberlist">
    <div style="font-size:37px; text-align:center;">Najważniejsze rzeczy, którymi kierujesz się każdego dnia:</div>
    <ol>
        @{
            if (Model.Todoes != null)
            {
                foreach (var todo in Model.Todoes.Where(x => x.TodoValue != null && x.TodoValue != ""))
                {
                    {
                        <li style="text-align:left;">
                            <a>@todo.TodoValue</a>
                        </li>
                    }
                }
            }
        }
    </ol>
</div>