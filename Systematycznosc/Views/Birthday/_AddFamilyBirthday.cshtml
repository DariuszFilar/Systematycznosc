@model Systematycznosc.ViewModels.BirthdayViewModel

<div style="font-size:37px; text-align:center; color:black;">Warto o nich pamiętać:</div>
@{
    for (int i = 0; i < Model.FamilyBirthdays.Count(); i++)
    {
        if (Model.FamilyBirthdays[i].FamilyBirthdayName != null)
        {
            <div class="mr-3 ml-3">
                <table id="table_id" class="table table-info table-hover table-striped" style="font-size:18px;">
                    <thead class="thead-dark">
                        <tr>
                            <th style="width: 300px">Nazwa:</th>
                            <th style="width: 300px">Data: (M/D/R):</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var familyBirthday in Model.FamilyBirthdays.Where(x => x.FamilyBirthdayName != null && x.FamilyBirthdayDate != null).OrderBy(x => x.FamilyBirthdayDate))
                        {
                            <tr>

                                <td>@familyBirthday.FamilyBirthdayName</td>
                                <td>
                                    @familyBirthday.FamilyBirthdayDate.Value.ToString("MM/dd/yyyy")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            break;
        }
    }
}

