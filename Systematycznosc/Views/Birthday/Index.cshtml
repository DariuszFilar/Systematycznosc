@section Scripts
{
    <script src="~/scripts/jquery.unobtrusive-ajax.js"></script>
}

@Scripts.Render("~/bundles/jquery")

<script type="text/javascript">
    var amountOfFamilyBirthday = @Model.FamilyBirthdays.Count();
    var amountOfFriendBirthday = @Model.FriendsBirthdays.Count();
    var amountOfOtherBirthday = @Model.OthersBirthdays.Count();

    $(document).ready(function () {
        if (@Model.FamilyBirthdays.Count() <= 15) {
            $("#panelFamilyBirthay2").hide();
        }
        if (@Model.FamilyBirthdays.Count() == 0) {
            $("#panelFamilyBirthay").hide();
        }

         if (@Model.FriendsBirthdays.Count() <= 15) {
            $("#panelFriendBirthay2").hide();
        }
        if (@Model.FriendsBirthdays.Count() == 0) {
            $("#panelFriendBirthay").hide();
        }

        if (@Model.OthersBirthdays.Count() <= 15) {
            $("#panelOtherBirthay2").hide();
        }
        if (@Model.OthersBirthdays.Count() == 0) {
            $("#panelOtherBirthay").hide();
        }
    });

      $('#saveButtonFamilyBirthday').click(function (e) {
        $.ajax({
            success: function (data) {
                amountOfFamilyBirthday++;

                if (amountOfFamilyBirthday > 15) {
                    $("#addformFamilyBirthday").html("Osiągnięto maksymalną ilość osób, wejdź w opcje by edytować");
                    $("#panelFamilyBirthay2").show();
                }
                if (amountOfFamilyBirthday > 0) {
                    $("#panelFamilyBirthay").show();
                }
            },
        });
      });

     $('#saveButtonFriendBirthday').click(function (e) {
        $.ajax({
            success: function (data) {
                amountOfFriendBirthday++;

                if (amountOfFriendBirthday > 15) {
                    $("#addformFriendBirthday").html("Osiągnięto maksymalną ilość osób, wejdź w opcje by edytować");
                    $("#panelFriendBirthay2").show();
                }
                if (amountOfFriendBirthday > 0) {
                    $("#panelFriendBirthay").show();
                }
            },
        });
     });

      $('#saveButtonOtherBirthday').click(function (e) {
        $.ajax({
            success: function (data) {
                amountOfOtherBirthday++;

                if (amountOfOtherBirthday > 15) {
                    $("#addformOtherBirthday").html("Osiągnięto maksymalną ilość osób, wejdź w opcje by edytować");
                    $("#panelOtherBirthay2").show();
                }
                if (amountOfOtherBirthday > 0) {
                    $("#panelOtherBirthay").show();
                }
            },
        });
      });
</script>

