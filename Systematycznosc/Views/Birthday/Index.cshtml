@using Systematycznosc.Models
@model Systematycznosc.ViewModels.BirthdayViewModel

<div class="d-flex align-items-center flex-column portfolio bg-primary text-white mb-0">

    <h1 class="masthead-heading text-uppercase mb-0 openTheard">Urodziny rodziny</h1>

    <div class="divider-custom">
        <div class="divider-custom-line" style="background-color:white!important;"></div>
        <div class="divider-custom-icon">
            <i class="glyphicon glyphicon-star" style="font-size: 55px; color:white!important;"></i>
        </div>
        <div class="divider-custom-line" style="background-color:white!important;"></div>
    </div>

    <div id="familyBirthdayTable">@{Html.RenderPartial("_FamilyBirthdayTable", Model);}</div>

    @{ if (Model.FamilyBirthdays.Count() < 16)
        {
            using (Ajax.BeginForm("Index", "Birthday", new { ReturnUrl = ViewBag.ReturnUrl, UpdateTargetId = "familyBirthdayTable" },
                new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "familyBirthdayTable" },
                new { @class = "form-horizontal col-md-11 col-s-5 col-lg-8", role = "form", style = " text-align: center; color:black; font-size:25px", id = "addformFamilyBirthday" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                {
                    <div class="form-group">
                        <div class="col-md-10" style="margin-left: auto; margin-right: auto; float: none!important;">
                            @Html.Label("Imie i nazwisko:", new { @class = "control-label", style = "margin-left:auto; margin-right:auto; display:inline-block; float:none; color:white; padding-top:55px;" })
                            @Html.TextBox("familyBirthdayName", null, new
                            {
                                placeholder = "Tu wpisz imię oraz nazwisko",
                                @class = "form-control",
                                style = "float:none!important; display:inline-block; font-size:25px;",
                                required = string.Empty
                            })
                            @Html.TextBox("familyBirthdayDate", null, new { @type = "date", @class = " datepicker", @style = "font-size:25px; margin-top:5px", required = string.Empty })
                        </div>
                    </div>
                }
                <div style="padding-bottom:50px; padding-top:20px;">
                    <div class="saveButtonDiv">
                        <button style="font-size:20px; color:white;" type="submit" class="btn btn-xl btn-outline-info btn-secondary" id="saveButtonFamilyBirthday">Zapisz</button>
                    </div>
                    <div class="saveButtonDiv" id="panelFamilyBirthay">
                        @Html.ActionLink("Panel edycyjny", "FamilyBirthdayEdit", "Birthday", null, new { @class = "btn btn-xl btn-outline-info btn-secondary", style = "font-size:20px; color:white;" })
                    </div>
                </div>
            }
        }
        else
        {
            <div style="font-size:25px; color:black;" class="mr-1">Osiągnięto maksymalną ilość osób, wejdź w opcje by edytować</div>
        }
    }
    <div class="saveButtonDiv" id="panelFamilyBirthay2">
        @Html.ActionLink("Panel edycyjny", "FamilyBirthdayEdit", "Birthday", null, new { @class = "btn btn-xl btn-outline-info btn-secondary", style = "font-size:20px; color:white;" })
    </div>
</div>

