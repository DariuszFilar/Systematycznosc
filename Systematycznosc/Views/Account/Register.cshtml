@model Systematycznosc.ViewModels.RegisterViewModel
@using Systematycznosc.ViewModels
@using Microsoft.AspNet.Identity

@{
    Layout = "~/Views/Shared/EmptyPage.cshtml";
}
<header class="text-white text-center">
    <div class=" d-flex align-items-center flex-column">
        <!-- Masthead Avatar Image -->
        <!-- Masthead Heading -->
        <h1 class="masthead-heading text-uppercase mb-0 questions" style="font-size:55px; text-align:center;" id="Opener">Rejestracja</h1>
        <!-- Icon Divider -->
        <div class="divider-custom " style="">
            <div class="divider-custom-line" style="background-color:white;"></div>
            <div class="divider-custom-icon">
                <i class="glyphicon glyphicon-star" style="font-size: 55px; color:white;"></i>
            </div>
            <div class="divider-custom-line" style="background-color:white;"></div>
        </div>
        <div style="color:; font-size:37px; text-align:center;">W pełni darmowa</div>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div id="container">
                <form>
                    @*@if (!Html.ViewData.ModelState.IsValid)
                        {<div class="text-danger">
                                Adres e-mail: @Model.Email.ToString() jest już zajęty.
                            </div>}*@
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.TextBoxFor(m => m.Email, new { @type = "text", placeholder = "E-mail", onfocus = "this.placeholder=''", onblur = "this.placeholder='E-mail'" })
                    @Html.ValidationMessageFor(model => model.Email)
                    @Html.PasswordFor(m => m.Password, new { @type = "password", placeholder = "hasło", onfocus = "this.placeholder=''", onblur = "this.placeholder='hasło'" })
                    @Html.ValidationMessageFor(model => model.Password)
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @type = "password", placeholder = "Potwierdź hasło", onfocus = "this.placeholder=''", onblur = "this.placeholder='Potwierdź hasło'" })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword)
                    <div class="text-center mt-4">
                        <input type="submit" value="Zarejestruj się" class="btn btn-xl btn-outline-dark">
                    </div>
                    @Html.ActionLink("Zaloguj się", "Index", "Home", new { style = "color:black" })
                </form>
            </div>
        }

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
</header>