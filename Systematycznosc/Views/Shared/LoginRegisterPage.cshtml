                    Menu
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse align-items-center" id="navbarResponsive">
                    <ul class="navbar-nav" style="align-items:center; width:100%;">
                        <li class="px-0 rounded js-scroll-trigger">@Html.ActionLink("Credo", "Index", "Credo", new { area = "" }, new { @class = "navbar-brand", @style = "color:white" })</li>
                        <li class=" px-0  rounded js-scroll-trigger">@Html.ActionLink("Związek", "Index", "Relationship", new { area = "" }, new { @class = "navbar-brand", @style = "color:white" })</li>
                        <li class=" px-0  rounded js-scroll-trigger">@Html.ActionLink("Pytania", "Index", "Question", new { area = "" }, new { @class = "navbar-brand", @style = "color:white" })</li>
                        <li class=" px-0  rounded js-scroll-trigger">@Html.ActionLink("Cele", "Index", "Goal", new { area = "" }, new { @class = "navbar-brand", @style = "color:white" })</li>
                        <li class=" px-0  rounded js-scroll-trigger">@Html.ActionLink("Do zrobienia", "Index", "TODO", new { area = "" }, new { @class = "navbar-brand", @style = "color:white" })</li>
                        <li class=" px-0 rounded js-scroll-trigger">@Html.ActionLink("Urodziny", "Index", "Birthday", new { area = "" }, new { @class = "navbar-brand", @style = "color:white" })</li>
                        <li class=" px-0  rounded js-scroll-trigger" style="display:block!important;">@Html.Partial("_LoginPartial")</li>
                    </ul>
                </div>
            </div>
        </nav>

        @RenderBody()

        <footer class="copyright py-4 text-center text-white" style="padding-bottom:24px; padding-top:24px; font-size: 16px; ">
            <small>Copyright &copy; Dariusz Filar 2019</small>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
        @Scripts.Render("~/bundles/jqueryui")
    </div>
</body>
</html>

