<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Pomocnik Systematyczności</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Twój pomocnik systematyczności</title>

    <!-- Custom fonts for this theme -->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">

    <!-- Theme CSS -->
    <link href="css/freelancer.min.css" rel="stylesheet">

</head>


<body id="page-top">
    <nav class="navbar navbar-expand-lg bg-secondary text-uppercase fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="#page-top">@Html.ActionLink("Główny Panel", "Index", "Home", new { area = "" }, new { @class = "", @style = "color:white; font-size: 1.75em;text-decoration:none; font-size:25px; " })</a>
            <button class="navbar-toggler navbar-toggler-right text-uppercase font-weight-bold bg-primary text-white rounded" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto" style="align-items:center;">
                    <li class="nav-item mx-0 mx-lg-1">
                        <a class="py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#Credo">@Html.ActionLink("Credo", "Credo", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "color:white" })</a>
                    </li>
                    <li class="nav-item mx-0 mx-lg-1">
                        <a class="py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#Związek">@Html.ActionLink("Związek", "Relationship", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "color:white" })</a>
                    </li>
                    <li class="nav-item mx-0 mx-lg-1 cent">
                        <a class="py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#Pytania">@Html.ActionLink("Pytania", "Questions", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "color:white" })</a>
                    </li>
                    <li class="nav-item mx-0 mx-lg-1">
                        <a class="py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#Cele">@Html.ActionLink("Cele", "Goals", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "color:white" })</a>
                    </li>
                    <li class="nav-item mx-0 mx-lg-1">
                        <a class="py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#Do zrobienia">@Html.ActionLink("Do zrobienia", "TODO", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "color:white" })</a>
                    </li>
                    <li class="nav-item mx-0 mx-lg-1">
                        <a class="py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#Urodziny">@Html.ActionLink("Urodziny", "Birthday", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "color:white" })</a>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div>
        @RenderBody()
        <!-- Copyright Section -->
        <section class="copyright py-4 text-center text-white">
            <div class="container" style="padding-bottom:24px; padding-top:24px; font-size: 20px; ">
                <small>Copyright &copy; Dariusz Filar 2019</small>
            </div>
        </section>

    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/jqueryui")

</body>
</html>
